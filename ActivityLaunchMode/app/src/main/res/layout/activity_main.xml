<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.devilwwj.activitylaunchmode.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="standard"
        android:id="@+id/btn_standard"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="68dp"
        android:onClick="openActivityWithStandard"
        android:layout_marginStart="68dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="singleTop"
        android:id="@+id/btn_singleTop"
        android:onClick="openActivityWithSingleTop"
        android:layout_below="@+id/btn_standard"
        android:layout_alignLeft="@+id/btn_standard"
        android:layout_alignStart="@+id/btn_standard" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="singleTask"
        android:id="@+id/btn_singleTask"
        android:layout_below="@+id/btn_singleTop"
        android:layout_alignLeft="@+id/btn_standard"
        android:onClick="openActivityWithSingleTask"
        android:layout_alignStart="@+id/btn_standard" />
</RelativeLayout>
